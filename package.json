{
  "name": "@sebastianthiebaud/schema-versioned-storage",
  "version": "0.2.3",
  "type": "module",
  "description": "Type-safe, versioned persisted state with automatic migrations",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.cjs"
    },
    "./adapters/async-storage": {
      "types": "./dist/adapters/async-storage.d.ts",
      "import": "./dist/adapters/async-storage.mjs",
      "require": "./dist/adapters/async-storage.cjs"
    },
    "./adapters/local-storage": {
      "types": "./dist/adapters/local-storage.d.ts",
      "import": "./dist/adapters/local-storage.mjs",
      "require": "./dist/adapters/local-storage.cjs"
    },
    "./adapters/memory": {
      "types": "./dist/adapters/memory.d.ts",
      "import": "./dist/adapters/memory.mjs",
      "require": "./dist/adapters/memory.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "generate:migrations": "tsx scripts/lib/generate-migrations-index.ts",
    "generate:schema-hashes": "tsx scripts/lib/generate-schema-hashes.ts"
  },
  "keywords": [
    "storage",
    "persistence",
    "persisted-state",
    "state-persistence",
    "schema",
    "schema-evolution",
    "migrations",
    "migration",
    "versioning",
    "backward-compatibility",
    "localstorage",
    "indexeddb",
    "react-native",
    "async-storage",
    "zod",
    "typescript"
  ],
  "author": "Sebastian Thiebaud",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastianThiebaud/schema-versioned-storage.git"
  },
  "homepage": "https://github.com/SebastianThiebaud/schema-versioned-storage#readme",
  "bugs": {
    "url": "https://github.com/SebastianThiebaud/schema-versioned-storage/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/SebastianThiebaud"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "^1.x.x || ^2.x.x",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@react-native-async-storage/async-storage": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "bin": {
    "svs": "./bin/svs.js"
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "templates",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
